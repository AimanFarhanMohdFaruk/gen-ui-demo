    },
    "error": {
      "50": "#fef2f2",
      "100": "#fee2e2",
      "200": "#fecaca",
      "300": "#fca5a5",
      "400": "#f87171",
      "500": "#ef4444",
      "600": "#dc2626",
      "700": "#b91c1c",
      "800": "#991b1b",
      "900": "#7f1d1d"
    },
    "neutral": {
      "50": "#fafafa",
      "100": "#f5f5f5",
      "200": "#e5e5e5",
      "300": "#d4d4d4",
      "400": "#a3a3a3",
      "500": "#737373",
      "600": "#525252",
      "700": "#404040",
      "800": "#262626",
      "900": "#171717",
      "950": "#0a0a0a"
    },
    "background": {
      "primary": "#0a0a0a",
      "secondary": "#171717",
      "tertiary": "#262626",
      "elevated": "#404040"
    },
    "surface": {
      "primary": "#171717",
      "secondary": "#262626",
      "tertiary": "#404040",
      "elevated": "#525252"
    },
    "text": {
      "primary": "#fafafa",
      "secondary": "#a3a3a3",
      "tertiary": "#737373",
      "inverse": "#0a0a0a"
    },
    "border": {
      "primary": "#404040",
      "secondary": "#525252",
      "tertiary": "#737373"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "monospace": "JetBrains Mono, 'Fira Code', 'Courier New', monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "fontWeight": {
      "light": "300",
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700",
      "extrabold": "800"
    },
    "lineHeight": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75"
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem",
    "4xl": "6rem"
  },
  "borderRadius": {
    "none": "0",
    "sm": "0.125rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
    "dark": {
      "sm": "0 1px 3px 0 rgba(0, 0, 0, 0.3)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.4), 0 2px 4px -1px rgba(0, 0, 0, 0.3)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.4), 0 4px 6px -2px rgba(0, 0, 0, 0.3)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.4), 0 10px 10px -5px rgba(0, 0, 0, 0.3)"
    }
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  "components": {
    "layout": {
      "sidebar": {
        "width": "280px",
        "backgroundColor": "#171717",
        "borderColor": "#404040",
        "textColor": "#a3a3a3",
        "activeBackgroundColor": "#404040",
        "activeTextColor": "#fafafa",
        "hoverBackgroundColor": "#262626"
      },
      "header": {
        "height": "64px",
        "backgroundColor": "#0a0a0a",
        "borderColor": "#404040",
        "textColor": "#fafafa"
      },
      "main": {
        "backgroundColor": "#0a0a0a",
        "padding": "2rem"
      }
    },
    "navigation": {
      "item": {
        "padding": "0.75rem 1rem",
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "transition": "all 0.2s ease"
      },
      "active": {
        "backgroundColor": "#404040",
        "color": "#fafafa"
      },
      "hover": {
        "backgroundColor": "#262626",
        "color": "#fafafa"
      }
    },
    "cards": {
      "contact": {
        "backgroundColor": "#171717",
        "borderColor": "#404040",
        "padding": "1.5rem",
        "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.4)",
        "hover": {
          "backgroundColor": "#262626",
          "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.4)"
        }
      },
      "job": {
        "backgroundColor": "#171717",
        "borderColor": "#404040",
        "padding": "1.5rem",
        "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.4)"
      },
      "match": {
        "backgroundColor": "#171717",
        "borderColor": "#404040",
        "padding": "1.5rem",
        "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.4)"
      },
      "metric": {
        "backgroundColor": "#171717",
        "borderColor": "#404040",
        "padding": "1.5rem",
        "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.4)"
      }
    },
    "buttons": {
      "primary": {
        "backgroundColor": "#404040",
        "textColor": "#fafafa",
        "borderColor": "#404040",
        "padding": "0.75rem 1.5rem",
        "fontSize": "0.875rem",
        "fontWeight": "600",
        "hover": {
          "backgroundColor": "#262626",
          "borderColor": "#262626"
        }
      },
      "secondary": {
        "backgroundColor": "transparent",
        "textColor": "#a3a3a3",
        "borderColor": "#404040",
        "padding": "0.75rem 1.5rem",
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "hover": {
          "backgroundColor": "#262626",
          "textColor": "#fafafa"
        }
      },
      "ghost": {
        "backgroundColor": "transparent",
        "textColor": "#a3a3a3",
        "borderColor": "transparent",
        "padding": "0.75rem 1.5rem",
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "hover": {
          "backgroundColor": "#262626",
          "textColor": "#fafafa"
        }
      },
      "danger": {
        "backgroundColor": "#dc2626",
        "textColor": "#fafafa",
        "borderColor": "#dc2626",
        "padding": "0.75rem 1.5rem",
        "fontSize": "0.875rem",
        "fontWeight": "600",
        "hover": {
          "backgroundColor": "#b91c1c",
          "borderColor": "#b91c1c"
        }
      }
    },
    "forms": {
      "input": {
        "backgroundColor": "#262626",
        "borderColor": "#404040",
        "textColor": "#fafafa",
        "placeholderColor": "#737373",
        "padding": "0.75rem 1rem",
        "fontSize": "0.875rem",
        "focus": {
          "borderColor": "#404040",
          "ringColor": "#525252",
          "ringWidth": "2px"
        }
      },
      "select": {
        "backgroundColor": "#262626",
        "borderColor": "#404040",
        "textColor": "#fafafa",
        "padding": "0.75rem 1rem",
        "fontSize": "0.875rem"
      },
      "textarea": {
        "backgroundColor": "#262626",
        "borderColor": "#404040",
        "textColor": "#fafafa",
        "placeholderColor": "#737373",

        "padding": "0.75rem 1rem",
        "fontSize": "0.875rem",
        "minHeight": "100px"
      }
    },
    "tags": {
      "skill": {
        "backgroundColor": "#262626",
        "textColor": "#a3a3a3",
        "borderColor": "#404040",

        "padding": "0.25rem 0.75rem",
        "fontSize": "0.75rem",
        "fontWeight": "500"
      },
      "status": {
        "open": {
          "backgroundColor": "#10b981",
          "textColor": "#fafafa"
        },
        "closed": {
          "backgroundColor": "#6b7280",
          "textColor": "#fafafa"
        },
        "draft": {
          "backgroundColor": "#f59e0b",
          "textColor": "#fafafa"
        }
      }
    },
    "profileToggle": {
      "backgroundColor": "#262626",
      "borderColor": "#404040",
      "padding": "0.25rem",
      "activeBackgroundColor": "#404040",
      "activeTextColor": "#fafafa",
      "inactiveTextColor": "#a3a3a3",
      "fontSize": "0.875rem",
      "fontWeight": "500"
    },
    "matchScore": {
      "backgroundColor": "#262626",
      "borderColor": "#404040",
      "padding": "0.5rem 1rem",
      "fontSize": "1rem",
      "fontWeight": "600",
      "high": {
        "backgroundColor": "#10b981",
        "textColor": "#fafafa"
      },
      "medium": {
        "backgroundColor": "#f59e0b",
        "textColor": "#fafafa"
      },
      "low": {
        "backgroundColor": "#ef4444",
        "textColor": "#fafafa"
      }
    }
  },
  "screens": {
    "dashboard": {
      "layout": "grid",
      "columns": {
        "desktop": 3,
        "tablet": 2,
        "mobile": 1
      },
      "sections": ["metrics", "quickActions", "recentActivity"]
    },
    "contacts": {
      "layout": "list",
      "viewOptions": ["list", "grid"],
      "filters": ["role", "location", "skills"],
      "search": true
    },
    "jobs": {
      "layout": "list",
      "viewOptions": ["list", "board"],
      "filters": ["status", "location", "salary"],
      "search": true
    },
    "matches": {
      "layout": "grid",
      "columns": {
        "desktop": 2,
        "tablet": 1,
        "mobile": 1
      },
      "filters": ["matchQuality", "job", "candidate"]
    }
  },
  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "transitions": {
      "default": "all 0.2s ease",
      "fast": "all 0.15s ease",
      "slow": "all 0.3s ease"
    }
  },
  "accessibility": {
    "focusRing": {
      "color": "#525252",
      "width": "2px",
      "offset": "2px"
    },
    "contrast": {
      "minimum": "4.5:1",
      "enhanced": "7:1"
    },
    "touchTargets": {
      "minimum": "44px"
    }
  }
}
